.d-flex.flex-column.align-items-center.pt-5
  %h1= t('.doctor_card')
  %p= image_tag(@current_doctor.avatar.thumb.url) if @current_doctor.avatar?
  %p.fw-bold
    = t('.category')
    %span.fw-normal= @current_doctor.category.title
  %p.fw-bold
    = t('.full_name')
    %span.fw-normal= @current_doctor.full_name
  %p.fw-bold
    = t('.phone_number')
    %span.fw-normal= @current_doctor.phone
