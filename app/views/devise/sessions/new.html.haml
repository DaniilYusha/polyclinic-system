%h2= "#{resource_name.capitalize} #{t('.log_in')}"
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .mb-3
    = f.label :phone, class: 'form-label'
    %br/
    = f.text_field :phone, autofocus: true, autocomplete: 'phone', class: 'form-control', required: true
  .mb-3
    = f.label :password, class: 'form-label'
    %br/
    = f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: true
  - if devise_mapping.rememberable?
    .mb-3.form-check
      = f.check_box :remember_me, class: 'form-check-input'
      = f.label :remember_me, class: 'form-check-label'
  .actions
    = f.submit t('.log_in'), class: 'btn btn-primary'
= render 'devise/shared/links'
